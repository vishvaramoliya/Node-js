<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <div class="header">
        <header>

            <%- include("header") %>
            
        </header>
    </div>

   <br>
    <center>
        <div class="sec2">
        </div>
    </center>

    <div class="sec3">
        <div class="movies-container">
            <h2>Recipes</h2>
            <div class="movie-cards">
                

             

                <%data.map((e, i)=> { %>
                    <div class="movie-card">
                        <img src="<%=e.image%>" width="50%" height="50%" alt="hello">

                        
                        <h3>
                            <%= e.name%>
                        </h3>
                        <p class="genre">
                            <%= e.ingred%>
                        </p>
                        <div class="actions">
                            <button class="edit">
                                <a href="/editData?id=<%=e.id %>">Edit</a>
                            </button>
                            <button class="delete">
                                <a href="/deleteData?id=<%=e.id %>">Delete</a>
                            </button>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>





</body>

</html>